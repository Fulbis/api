<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="Fulbis\Domain\Entity\Team" table="fulbis_team">
        <indexes>
            <index columns="uuid"/>
        </indexes>
        <id name="id_auto" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="id" type="guid" column="uuid" />
        <field name="name" type="string" column="name" length="50" />
        <field name="deleted" type="boolean" column="deleted" />
        <one-to-many field="players" target-entity="Player" mapped-by="team" />
        <many-to-one field="tournament" target-entity="Tournament" inversed-by="teams">
            <join-column name="tournament_id" referenced-column-name="id_auto" />
        </many-to-one>
    </entity>
</doctrine-mapping>